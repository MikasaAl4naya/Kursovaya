@model IEnumerable<WebApplication7.Models.Student>

@using WebApplication7.Models;
@{
    ViewBag.Title = "Студенты";

    Pager pager = new Pager();
    int pageNum = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNum = pager.CurrentPage;
    }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecordBook)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotherSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group_2_Cipher)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecordBook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotherSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group_2.Cipher)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RecordBook }) |
                @Html.ActionLink("Details", "Details", new { id = item.RecordBook }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RecordBook })
            </td>
        </tr>
    }

</table>
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pg=1">Первая</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="?pg=@(pager.CurrentPage - 1)">Назад</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?pg=@pge"> @pge </a>
                </li>
            }

            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?pg=@(pager.CurrentPage + 1)">Далее</a>
                </li>
                <li>
                    <a class="page-link" href="?pg=@(pager.TotalPages)">Последняя</a>
                </li>
            }
        </ul>
    }
</div>

